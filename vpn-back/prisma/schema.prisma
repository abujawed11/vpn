generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int         @id @default(autoincrement())
  email     String      @unique
  username  String      @unique
  password  String
  role      String      @default("user") // user, admin
  plan      String      @default("free") // free, paid
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  configs   VpnConfig[]

  @@map("users")
}

model Region {
  id              String   @id @db.VarChar(50)
  name            String   @db.VarChar(100)
  host            String   @db.VarChar(100)
  endpoint        String   @db.VarChar(100)
  serverPublicKey String   @db.Text
  baseIp          String   @db.VarChar(20)
  dns             String   @default("1.1.1.1") @db.VarChar(50)
  isActive        Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([isActive])
  @@map("regions")
}

model VpnConfig {
  id                Int       @id @default(autoincrement())
  userId            Int
  regionId          String
  publicKey         String    @db.VarChar(255)
  privateKey        String    @db.VarChar(255)
  ip                String
  createdAt         DateTime  @default(now())
  firstHandshakeAt  DateTime?
  expiresAt         DateTime?
  isActive          Boolean   @default(true)
  customDuration    Int?      @db.Int // Custom duration in minutes (admin only), null = use plan defaults

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, regionId])
  @@index([publicKey])
  @@map("vpn_configs")
}
